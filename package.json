{
  "name": "jsxhint",
  "version": "0.0.1",
  "description": "Wrapper for JSHint to allow hinting of JSX files",
  "main": "jsxhint.js",
  "bin": "./cli.js",
  "scripts": {
    "test": "tap test/test.js",
    "lint": "jshint",
    "postinstall": "if [[ -d .git ]]; then cp pre-commit.sh .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit; fi",
    "precommit": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "CondeNast/JSXHint"
  },
  "prefer_global": true,
  "keywords": [
    "jshint",
    "jsx",
    "react",
    "lint",
    "jslint",
    "reactjs"
  ],
  "author": "Todd Kennedy",
  "license": "MIT",
  "dependencies": {
    "runnel": "~0.5.1",
    "glob": "~3.2.6",
    "jshint": "~2.1.10",
    "react-tools": "~0.4.1",
    "argparse": "~0.1.15",
    "colors": "~0.6.2"
  },
  "devDependencies": {
    "tap": "~0.4.6"
  }
}
